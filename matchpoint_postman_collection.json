							"mode": "graphql",
							"graphql": {
								"query": "mutation RegisterUser($input: RegisterUserInput!) {\n  registerUser(input: $input) {\n    user {\n      id\n      email\n      firstName\n      lastName\n    }\n    token\n    errors\n  }\n}",
								"variables": "{\n  \"input\": {\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\",\n    \"birthdate\": \"1990-01-01\",\n    \"gender\": \"Male\",\n    \"genderInterest\": \"Female\",\n    \"country\": \"Philippines\",\n    \"province\": \"Metro Manila\",\n    \"city\": \"Makati\",\n    \"mobile\": \"09123456789\",\n    \"sexualOrientation\": \"Straight\",\n    \"bio\": \"Hello world!\"\n  }\n}"
							}
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"graphql"
							]
						}
					}
				},
				{
					"name": "Login User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.json().data.loginUser.token) {",
									"    pm.environment.set(\"token\", pm.response.json().data.loginUser.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "graphql",
							"graphql": {
								"query": "mutation LoginUser($input: LoginUserInput!) {\n  loginUser(input: $input) {\n    user {\n      id\n      email\n      firstName\n      lastName\n    }\n    token\n    errors\n  }\n}",
								"variables": "{\n  \"input\": {\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n  }\n}"
							}
						},
						"url": {
							"raw": "{{base_url}}/graphql",
